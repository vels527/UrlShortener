@model UrlShortener.Models.ShortenUrlModel
@{
    ViewBag.Title = "ShortenUrl";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Enter Url to Shorten</h2>
</hgroup>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Url Shortener Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.FullUrl)
                @Html.TextBoxFor(m => m.FullUrl,  new { style = "width: 750px;" })
            </li>

        </ol>
        <input type="submit" value="Shorten" />
    </fieldset>
}

@if (!string.IsNullOrEmpty(ViewBag.StatusMessage))
{
    //@Html.Partial("_ChangePasswordPartial")
    <p>
        <span class="label">Shortened Url:</span>
        <span>@ViewBag.StatusMessage</span>
    </p>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
